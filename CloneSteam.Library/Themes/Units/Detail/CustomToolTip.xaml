<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dunits="clr-namespace:CloneSteam.Library.UI.Units.Detail">
    <Style  TargetType="{x:Type dunits:CustomToolTip}">
        <Setter Property="Background" Value="#696773"/>
        <Setter Property="Width" Value="130"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dunits:CustomToolTip}">
                    <Border Background="{TemplateBinding Background}" CornerRadius="2">
                        <Label FontWeight="Bold" Content="{TemplateBinding Content}" Foreground="#cfcfd5"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>