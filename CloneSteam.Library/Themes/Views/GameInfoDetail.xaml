<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dunits="clr-namespace:CloneSteam.Library.UI.Units.Detail"
    xmlns:dunitsF="clr-namespace:CloneSteam.Library.UI.Units.Detail.Functions"
    xmlns:units="clr-namespace:CloneSteam.Library.UI.Units"
    xmlns:views="clr-namespace:CloneSteam.Library.UI.Views"
    xmlns:icon="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF">
   

    <Style TargetType="{x:Type views:GameInfoDetail}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:GameInfoDetail}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="280" />
                            <!--<RowDefinition Height="100" />-->
                            <RowDefinition Height="800" />
                        </Grid.RowDefinitions>

                        <!--  border 백그라운드 이미지 세팅  -->
                        <Border>
                            <Border.Background>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Image Source="{Binding BackgroundImage}">
                                            <Image.Clip>
                                                <RectangleGeometry Rect="0,0,1920,280" />
                                            </Image.Clip>
                                        </Image>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Border.Background>
                        </Border>

                        <Border Grid.Row="1" Opacity="0.8">
                            <Border.Background>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Image Source="{Binding BackgroundImage}">
                                            <Image.Clip>
                                                <RectangleGeometry Rect="0,280,1920,380" />
                                            </Image.Clip>
                                            <Image.BitmapEffect>
                                                <BlurBitmapEffect KernelType="Gaussian" Radius="50" />
                                            </Image.BitmapEffect>
                                        </Image>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Border.Background>
                        </Border>
                        <StackPanel Orientation="Vertical" Grid.Row="1">
                            <Grid>
                                <StackPanel
                            Grid.Row="1"
                            Margin="20,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                                    <dunits:PlayButton Width="115" Height="33" />
                                    <dunits:PlayTimeText
                                Margin="20,0,0,0"
                                ChildText="{Binding .}"
                                FontSize="13"
                                Text="마지막 플레이" />
                                    <dunits:PlayTimeText
                                Margin="20,0,0,0"
                                ChildText="{Binding .}"
                                FontSize="13"
                                Text="플레이 시간" />

                                </StackPanel>

                                <!--subbutton-->
                                <dunitsF:SettingButton x:Name="BookmarkBtn" HorizontalAlignment="Right" Width="30" Height="30" Margin="0 5 0 5" Command="{Binding BookmarkBtnCommand}"/>
                                <dunitsF:BookmarkButton x:Name="SettingBtn" HorizontalAlignment="Right" Width="30" Height="30" Margin="0 5 80 5"  Command="{Binding SettingBtnCommand}"/>
                                <dunitsF:InfoButton x:Name="InfoBtn" HorizontalAlignment="Right" Width="30" Height="30" Margin="0 5 40 5" Command="{Binding InfoBtnCommand}"/>

                            </Grid>
                            
                            <Border Margin="20 20 0 0" HorizontalAlignment="Stretch" Background="#3c444c"  Opacity="0.35" Height="40" >
                                <StackPanel Orientation="Horizontal" >
                                    <dunits:TopMenuButton x:Name="ShowPageBtn" Content="상점 페이지" HorizontalAlignment="Right"  Width="120" Height="30" Margin="10 5 10 5" Command="{Binding ShowPageCommand}"/>
                                    <dunits:TopMenuButton x:Name="CummunityHubBtn" Content="커뮤니티 허브" Width="120" Height="28" Margin="5 0 10 0" Command="{Binding CummunityhubCommand}"/>
                                    <dunits:TopMenuButton x:Name="DebateBtn" Content="토론"  Width="60" Height="28"  Margin="5 0 10 0" Command="{Binding DebateCommand}"/>
                                    <dunits:TopMenuButton x:Name="GuideBtn" Content="가이드" Width="80" Height="28"  Margin="5 0 10 0" HorizontalContentAlignment="Center" Command="{Binding GuideCommand}"/>
                                        <dunits:TopMenuButton x:Name="SupportBtn" Content="지원" Width="60" Height="28"  Margin="6 0 10 0" HorizontalContentAlignment="Center" Command="{Binding SupportCommand}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>